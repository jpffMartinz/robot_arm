<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_arm">

  <!-- <xacro:include filename="include.xacro"/> -->

  <material name="orange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>

  <link name="world"></link>

  <joint name="base_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="base_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.14159" effort="100" velocity="0.5"/>        
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://arm_description/meshes/base_link.dae" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="orange"></material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://arm_description/meshes/base_link.dae" scale="1.0 1.0 1.0"/> 
      </geometry>

    </collision>
  
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="0.0723"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

    </inertial>


  </link>

  <joint name="joint1" type="revolute">
    <origin xyz="0.017 0 0.055" rpy="0 0 0"/>  <!-- Adjust height based on your base -->
    <parent link="base_link"/>
    <child link="link1"/>
    <axis xyz="1 0 0"/>  <!-- Rotation around Z-axis (vertical) -->
    <limit lower="0" upper="1.570796327" effort="100" velocity="1.0"/>

  </joint>

  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- Position relative to joint -->
      <geometry>
        <mesh filename="package://arm_description/meshes/link_1.dae"/>
      </geometry>
      <material name="orange"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://arm_description/meshes/link_1.dae"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.020"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint2" type="revolute">
    <origin xyz="0 0.3 0" rpy="0 0 0"/> 
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="1 0 0"/>  <!-- Rotation around Z-axis (vertical) -->
    <limit lower="-2.5" upper="2.5" effort="100" velocity="1.0"/>

  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- Position relative to joint -->
      <geometry>
        <mesh filename="package://arm_description/meshes/link_2.dae"/>
      </geometry>
      <material name="orange"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://arm_description/meshes/link_2.dae"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.020"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>


  <joint name="wrist_pitch" type="revolute">
    <origin xyz="0 0.2 0" rpy="0 0 0"/>  <!-- At end of link2 -->
    <parent link="link2"/>
    <child link="wrist_pitch_link"/>
    <axis xyz="1 0 0"/>  <!-- Rotation around Y-axis for pitch -->
    <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
  </joint>





  <!-- Wrist Pitch Link -->
  <link name="wrist_pitch_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.02 0.04"/>  <!-- Small rectangular housing -->
      </geometry>
      <material name="orange"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.02 0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

    <!-- Wrist Roll Joint -->
  <joint name="wrist_roll" type="revolute">
    <origin xyz="0 0.035  0" rpy="-1.57 0 0"/>  <!-- Forward from wrist pitch -->
    <parent link="wrist_pitch_link"/>
    <child link="wrist_roll_link"/>
    <axis xyz="0 0 1"/>  <!-- Rotation around X-axis for roll -->
    <limit lower="-3.14" upper="3.14" effort="30" velocity="3.0"/>
  </joint>

  <!-- Wrist Roll Link (End Effector Mount) -->
  <link name="wrist_roll_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>  <!-- Rotate to make cylinder along X -->
      <geometry>
        <cylinder radius="0.02" length="0.05"/>  <!-- Small cylinder -->
      </geometry>
      <material name="orange"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.05"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>


    <!-- Gripper Base Joint -->
  <joint name="gripper_base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="wrist_roll_link"/>
    <child link="gripper_base"/>
  </joint>

  <!-- Gripper Base Link -->
  <link name="gripper_base">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.015"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Left Gripper Finger Joint -->
  <joint name="left_gripper_joint" type="prismatic">
    <origin xyz="0 -0.015 0.04" rpy="0 0 0"/>
    <parent link="gripper_base"/>
    <child link="left_gripper_finger"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.01" effort="10" velocity="0.1"/>
  </joint>

  <!-- Left Gripper Finger Link -->
  <link name="left_gripper_finger">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.017 0.005 0.015"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.017 0.005 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Right Gripper Finger Joint -->
  <joint name="right_gripper_joint" type="prismatic">
    <origin xyz="0 0.015 0.04" rpy="0 0 0"/>
    <parent link="gripper_base"/>
    <child link="right_gripper_finger"/>
    <axis xyz="0 -1 0"/>
    <limit lower="0.0" upper="0.01" effort="10" velocity="0.1"/>
    <mimic joint="left_gripper_joint" multiplier="1.0"/>
  </joint>

  <!-- Right Gripper Finger Link -->
  <link name="right_gripper_finger">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.017 0.005 0.015"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.017 0.005 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>



 
</robot>