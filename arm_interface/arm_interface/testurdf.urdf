<?xml version="1.0"?>
<robot name="single_joint_bot">

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <link name="moving_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/> <geometry>
        <box size="0.2 0.02 0.02"/> </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="motor_1" type="revolute">
    <parent link="base_link"/>
    <child link="moving_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/> <limit lower="-3.14" upper="3.14" effort="10" velocity="10"/>
  </joint>

</robot>